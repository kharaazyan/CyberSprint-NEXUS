{
  "name": "nexus",
  "version": "2.0.0",
  "description": "NEXUS",
  "main": "server.js",
  "type": "module",
  "bin": {
    "netsectool": "./cli.js"
  },
  "scripts": {
    "serve": "node server.js",
    "shell": "node cli.js shell",
    "start": "node cli.js shell",
    "dev": "nodemon server.js",
    "cli": "node cli.js",
    "serve:dev": "nodemon server.js",
    "prestart": "mkdir -p logs keys",
    "poststart": "node -e \"import('./scripts/ipfs-daemon.js').then(d => d.stopDaemon())\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "node -e \"import('fs').then(fs => fs.promises.rm('node_modules', { recursive: true, force: true })).then(() => console.log('Cleaned'))\"",
    "setup": "node scripts/setup.js",
    "check-deps": "npx npm-check-updates",
    "update-deps": "npx npm-check-updates -u && npm install",
    "build-docs": "jsdoc -c jsdoc.json",
    "security-check": "npm audit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "yargs": "^17.7.2",
    "chalk": "^5.3.0",
    "winston": "^3.11.0",
    "ora": "^7.0.1",
    "node-fetch": "^3.3.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "rotating-file-stream": "^3.2.1",
    "fastq": "^1.16.0",
    "p-limit": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "jest": "^29.7.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "prettier": "^3.2.5",
    "jsdoc": "^4.0.2",
    "@types/node": "^20.11.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "clean-jsdoc-theme": "^4.2.17"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ipfs",
    "security",
    "cli",
    "web-ui",
    "logging",
    "encryption",
    "monitoring"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "jest": {
    "transform": {},
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".js"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
} 